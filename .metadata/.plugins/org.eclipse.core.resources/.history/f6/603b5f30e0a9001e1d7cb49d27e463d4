package ch12.threadtest.beep;

import java.awt.Toolkit;

public class BeepMainExam {
	public static void main(String[] args) throws InterruptedException {
		// 스레드 없는 소리와 자막 연출하기
		
		Toolkit tk = Toolkit.getDefaultToolkit();
		for(int i = 0 ; i < 10 ; i ++) {
			tk.beep();
			Thread.sleep(1000);
		}
	}
}
