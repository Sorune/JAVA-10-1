package ch05;

import java.util.*;

public class LottoExam {
	public static void main(String[] args) {
		//로또 당첨 프로그램
		//랜덤값으로 1~45의 숫자를 맞추세요
		
		int num1 = (int)(Math.random()*45)+1;
		int num2 = (int)(Math.random()*45)+1;
		int num3 = (int)(Math.random()*45)+1;
		int num4 = (int)(Math.random()*45)+1;
		int num5 = (int)(Math.random()*45)+1;
		int num6 = (int)(Math.random()*45)+1;
		int num7 = (int)(Math.random()*45)+1;
		
		Scanner input = new Scanner(System.in);
		
		System.out.print("숫자를 입력하세요 : ");
		int number = input.nextInt();
		
		
		System.out.printf("%d %d %d %d %d %d %d",num1,num2,num3,num4,num5,num6,num7);
		if ((number == num1) || (number == num2) || (number == num3) ||(number == num4) ||(number == num5) ||(number == num6) || (number == num7)){
			System.out.println("축하드립니다. 당첨되셨습니다.");
		} else {
			System.out.println("안타깝네요. 다음 기회에~");
		}
	}
}
