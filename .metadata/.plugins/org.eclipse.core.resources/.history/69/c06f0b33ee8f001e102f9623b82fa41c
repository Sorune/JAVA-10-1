package ch05;

import java.util.*;

public class IfSsnExam {
	public static void main(String[] args) {
		// 주민등록 번호를 활용하는 예제
		
		Scanner in = new Scanner(System.in);
		
		System.out.print("주민등록번호 13자리를 입력하세요(- 생략 가능합니다) : ");
		String ssn = in.next();
		boolean isIn = ssn.contains("-");
		
		char ssn2;
		
		if (isIn) {
			ssn2 = ssn.charAt(7);
		} else {
			ssn2 = ssn.charAt(6);
		}
		
		int num = Character.getNumericValue(ssn2);
		
		if (num%2==0) {
			System.out.println("문자로 판단한 결과 여자입니다");
		} else if (num%2==1) {
			System.out.println("문자로 판단한 결과 남자입니다");
		} else {
			System.out.println("주민등록번호가 잘못되었습니다. 다시 입력해주세요");
		}
		
		String yearString = ssn.substring(0,2);
		System.out.println(yearString);
		int year = Integer.parseInt(ssn.substring(0,2));
		
		if(num == 1 || num == 2 || num == 5 || num == 6) {
			System.out.printf("나이는 %d 입니다.",(2023-(1900+year)+1));
		} else if (num == 3 || num == 4 || num == 7 || num == 8) {
			System.out.printf("나이는 %d 입니다.",(2023-(2000+year)+1));
		} else {
			System.out.println("주민등록번호가 잘못되었습니다. 다시 입력해주세요");
		}
		
		int month = Integer.parseInt(ssn.substring(2, 4));
		
		if (month <= 0 || month > 12) {
			System.out.println("주민등록번호가 잘못되었습니다. 다시 입력해주세요");
		} else if(month >=3 && month <= 5) {
			System.out.println("봄에 태어났습니다.");
		} else if(month >=6 && month <= 8) {
			System.out.println("여름에 태어났습니다.");
		} else if(month >=9 && month <= 11) {
			System.out.println("가을에 태어났습니다.");
		} else {
			System.out.println("겨울에 태어났습니다.");
		}
		
		
		
	}
}
