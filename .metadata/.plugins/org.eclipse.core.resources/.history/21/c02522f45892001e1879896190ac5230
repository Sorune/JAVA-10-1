package ch05;

import java.util.*;

public class TimerExam {
	public static void main(String[] args) {
		Date date = new Date();
		int count = 0;
		long now = date.getTime(), time = date.getTime();
		while (true) {
			now = System.currentTimeMillis();
			long remain = Math.floorDiv((now - time),1000);
			
			System.out.printf("%d %d %d\n",now,time,remain);
		}
	}
}
