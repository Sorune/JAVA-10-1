package ch05;

import java.util.*;

public class TimerExam {
	public static void main(String[] args) {
		Date date = new Date();
		int count = 0;
		long now = date.getTime(), time = 0;
		while (true) {
			now = date.getTime();
			if (count == 0 ) {
				time = now;
				count++;
			}
			long remain = now - time;
			
			System.out.println(remain);
		}
	}
}
